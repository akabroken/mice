<main>
    <section class="hotels">
        <% hotels.forEach((hotel, index)=> { %>
            <div class="hotel-card">
                <h2>
                    <%= hotel.name %>
                </h2>
                <p>
                    <%= hotel.description %>
                </p>
                <p>Price: $<%= hotel.price %> per night</p>
                <a href="/book/<%= index %>">Book Now</a>
            </div>
            <% }); %>
    </section>
</main>